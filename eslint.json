{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
      "it": "writable",
      "describe": "writable"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": "off",
        "handle-callback-err": "off",
        "padded-blocks": "off",
        "func-call-spacing": "off",
        "no-trailing-spaces": "off",
        "space-before-function-paren": "off",
        "no-multiple-empty-lines": "off",
        "eol-last": "off"
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "standard-react"
    ]
}